<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.evolvr.evolvr" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity android:name=".InitialScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".highscores_activity"
            android:label="@string/title_activity_highscores_activity"
            android:parentActivityName=".InitialScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.evolvr.evolvr.InitialScreen" />
        </activity>
        <activity
            android:name=".settings_activity"
            android:label="@string/title_activity_settings_activity"
            android:parentActivityName=".InitialScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.evolvr.evolvr.InitialScreen" />
        </activity>
    </application>

</manifest>
